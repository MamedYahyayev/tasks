<Application x:Class="SchoolManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:SchoolManagement.ViewModel"
             xmlns:view="clr-namespace:SchoolManagement.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/MenuButtonTheme.xaml" />
                <ResourceDictionary Source="/Theme/TextBoxTheme.xaml" />
                <ResourceDictionary Source="/Theme/OperationButtonTheme.xaml" />
                <ResourceDictionary Source="/Theme/FormTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:TeacherViewModel }">
                <view:TeacherView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:StudentViewModel }">
                <view:StudentView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SubjectViewModel}">
                <view:SubjectView />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
